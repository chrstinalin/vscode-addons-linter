{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Linter",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "npm: compile:prod",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ]
}
